{
  "compilerOptions": {
    "types": ["mocha", "chai", "jest", "node"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015"],
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "target",
    ".next",
    "**/dist/**",
    "**/target/**",
    "**/coverage/**"
  ]
}
